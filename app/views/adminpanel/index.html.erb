<br>
<button data-toggle="collapse" data-target="#needshipping" class="btn btn-info btn-lg">Orders That Need To Be Shipped</button>
<div id="needshipping" class="collapse">

<div class="table-responsive">
 <table style="width:25%" class = "table">
 <tr>
   <th>Customer</th>
   <th>Product</th>
   <th>Quantity</th>
   <th>Total Amount Due</th>
   <th>Order Date</th>
 </tr>
<% @needshipping.each do |order| %>

<% @customername = User.where('id = ?', order.customerid).first %>


<tr>
      <td><%= @customername.username %></td>

      <td><%= order.productname %></td>

      <td><%= order.quantity %></td>

      <td>$<%= order.total.round(2) %></td>

      <td><%= order.created_at %></td>

      <td>
        <a class="btn btn-success" href = "/adminpanel/shiporder/<%= order.id %>" type="button">Ship</a>
      </td>
  </tr>
<% end %>
</table>
</div>
</div>




