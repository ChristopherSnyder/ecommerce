<h1>My Orders</h1>
<br>
<div class="table-responsive">
 <table style="width:25%" class = "table">
 <tr>
   <th>Product</th>
   <th>Quantity</th>
   <th>Total Amount Due</th>
   <th>Order Date</th>
   <th>Shipped?</th>
 </tr>
<% @orders.each do |order| %>
<tr>
      <td><%= order.productname %></td>

      <td><%= order.quantity %></td>

      <td><%= order.total %></td>

      <td><%= order.created_at %></td>

      <% if order.shipped == true %>
      <td>Yes!</td>
      <% else %>
      <td>No</td>
      <%end%>
  </tr>
<% end %>
</table>
</div>


